<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= project.title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body class="d-flex align-items-center py-4 bg-body-tertiary">
    <%- include('navbar') %>
    <br/>
    <br/>
    <br/>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="row">
          <div class="col">
              <div class="card text-white text-center bg-dark pb-2">
                  <div class="card-body">
                    <h1 class="card-title mb-3"><%= project.title %></h1>
                    <h3 class="card-subtitle mb-4">School: <a href="/schools/view/<%= project.school %>" class="text-white"><%= project.school %></a></h3>
                    <h4 class="card-subtitle mb-3">Goal: £<%= project.goalmoney %></h4>
                    <h4 class="card-subtitle mb-4">Current: £<%= project.currentmoney %></h4>
                    <h4 class="card-subtitle mb-5">Status: <%= project.status %></h4>
                    <p class="lead mb-5"><%= project.description %></p>
                    <form id="donationForm" style="display: none;">
                      <button type="submit" class="btn btn-donate text-light mb-2">Donate</button>
                    </form>
                    <p id="noDonation" style="display: none;" class="card-text mb-5">Donation not available</p>
                    <a href="#" id="editProjectButton" style="display: none;" class="btn btn-edit text-light mb-3">Edit Project</a> 
                  </div>
              </div>
          </div>
        </div>
    </div>   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>

  <script>

    async function checkEligibility() {
      var school = "<%= project.school %>";
      var firebtoken = localStorage.getItem('firebtoken');
      var response = await fetch("<%= project.projectid %>", {
        method: "POST",
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          school: school,
          firebtoken: firebtoken
        })
      });

      var responseBody = await response.text();
      if (response.status === 200) {
        console.log("Eligible for editing: " + responseBody);
        var editProjectButton = document.getElementById("editProjectButton");
        editProjectButton.style.display = 'block';
        editProjectButton.href = "/projects/edit/" + "<%= project.projectid %>" + "?firebtoken=" + firebtoken;
      }
      else {
        console.log("Not Eligible for editing: " + responseBody);
      }
    }
  checkEligibility();

  var donationLink = "";
  async function checkDonation(){
    var response = await fetch("/projects/donate/<%= project.projectid %>", {
      method: "POST",
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(localStorage.getItem('uid') ? {userid: localStorage.getItem('uid')} : {})
    });

    var json = await response.json();
    var donationForm = document.getElementById("donationForm");
    var noDonation = document.getElementById("noDonation")
    if (response.status === 200) {
      console.log("Eligible for donation: " + json.msg);
      donationForm.action = json.link;
      donationForm.style.display = 'block';
      noDonation.style.display = 'none';
    }
    else {
      console.log("Not Eligible for donation: " + json.msg);
      donationForm.style.display = 'none';
      noDonation.style.display = 'block';
    }
  }

  checkDonation();
  </script>
  
</html>
