<!DOCTYPE html>
<html>
  <head>
    <title>Sign Up</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="javascripts/require.js"></script>
  </head>
  <body>
    <%- include('navbar') %>
    <h1>Sign UP Form</h1>
    <form id="signupform">
        <label for="email" >Email</label><br>
        <input type="text" id="emailField" name="emailField"><br>
        <label for="password">Password</label><br>
        <input type="password" id="passField" name="passField">
        <button type="submit">Submit</button>
    </form>
    
  </body>
  <script>
    var form = document.getElementById("signupform");
    async function sendLogin(event){
        event.preventDefault();
        var email = document.getElementById("emailField").value;
        var pass = document.getElementById("passField").value;

        // Post-Request to Sign Up
        const authEndPoint = "https://identitytoolkit.googleapis.com/v1/accounts:signUp?key=AIzaSyAL9QXZnvWQAPAnFlXXQhdInCs7qkD3Xbc"
        var response = await fetch(authEndPoint, {
            method: "POST",
            body: JSON.stringify({
                email: email,
                password: pass,
                returnSecureToken: true
            })
        })
        
        var json = await response.json()
        if (response.status == 200){
            console.log("Success Sign Up")
            localStorage.setItem("firebtoken", json.idToken)
            
            // Redirect to settings
            window.location.href = "/settings"
        }
        else{
            alert("Tried but failed to Sign Up")
        }

    }
    form.addEventListener('submit', sendLogin);
    </script>
</html>
